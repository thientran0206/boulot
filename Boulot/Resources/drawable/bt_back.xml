<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <gradient
             android:startColor="#101010"
             android:endColor="#C0C0C0"
             android:angle="270"/>
      <stroke
             android:width="5dp"
             android:color="#080808"/>
      <corners
             android:radius="20dp"/>

    </shape>
  </item>
  <item>
    <shape>
      <gradient
             android:startColor="#FF6E00"
             android:endColor="#FFC400"
             android:angle="270"/>
      <stroke
             android:width="1dp"
             android:color="#080808"/>
      <corners
             android:radius="20dp"/>

    </shape>
  </item>
</selector>